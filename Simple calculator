num1 = float(input("Enter num1 : "))
num2 = float(input("Enter num2 : "))

operation = input("Enter the operation (+,-,*,/) : ")

if operation == "+":
    print(f"{num1} + {num2} = {num1 + num2}")

elif operation == "-":
    print(f"{num1} - {num2} = {num1 - num2}")
    
elif operation == "*":
    print(f"{num1} X {num2} = {num1 * num2}")

elif operation == "/":
    print(f"{num1} / {num2} = {num1 / num2}")

else:
    print("Select the corrent operation! Try again")
